.input
  height: 45px
  width 100%
  padding: 0 30px;
  font-family: 'Gilroy-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 110%
  color: #444444
  border: 1px solid #55342E
  border-radius: 15px;
  background: #fff
  position relative
  overflow hidden
  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s

  &:hover
    border 1px solid #5588C7
  &:focus
    color: #151515
    caret-color: #5588C7
    border 1px solid #5588C7
    box-shadow: 3px 3px 10px 0px #5588C7
    &::placeholder
      color: #444444
  &::placeholder
    color: #444444
  +above($breakpoints.sm)
    padding: 0 20px;
    font-size: 14px;
    height: 50px
  +above($breakpoints.md)
    padding: 0 25px;
    font-size: 16px;
    height: 60px
  +above($breakpoints.xxl)
    padding: 0 30px;
    font-size: 18px;
    height: 70px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 10px 10px 10px 30px
    resize: none
    height: 70px
    width 280px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 20px
      width 340px
      height: 108px
    +above($breakpoints.md)
      padding: 17px 10px 10px 25px
      width 450px
      height: 129px;
    +above($breakpoints.xxl)
      padding: 26px 10px 10px 30px
      width 536px
      height: 149px
