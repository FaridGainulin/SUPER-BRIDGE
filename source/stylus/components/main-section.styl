.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #1D2F50
  padding-bottom 20px
  +above($breakpoints.sm)
    padding-bottom 30px
  +above($breakpoints.md)
    padding-bottom 50px
  +above($breakpoints.xxl)
    padding-bottom 80px

  &__container-wrapper
    width 100%
    position relative
    z-index 1
    backdrop-filter: blur(18px);
    background: rgba(50, 78, 147, 0.55);
    border-radius: 15px
    +above($breakpoints.sm)
      width 450px
      border-radius: 20px
    +above($breakpoints.md)
      width 580px
      border-radius: 25px
    +above($breakpoints.xxl)
      width 700px
      border-radius: 31px

  &__container
    width 100%
    background-image: radial-gradient(circle at 100% 100%, transparent 14px, #405a86 14px, #405a86 16px, transparent 16px), linear-gradient(to right, #405a86, #557194), radial-gradient(circle at 0% 100%, transparent 14px, #557194 14px, #557194 16px, transparent 16px), linear-gradient(to bottom, #557194, #425a80), radial-gradient(circle at 0% 0%, transparent 14px, #425a80 14px, #425a80 16px, transparent 16px), linear-gradient(to left, #425a80, #2a4276), radial-gradient(circle at 100% 0%, transparent 14px, #2a4276 14px, #2a4276 16px, transparent 16px), linear-gradient(to top, #2a4276, #405a86);
    background-size: 16px 16px, calc(100% - 32px) 2px, 16px 16px, 2px calc(100% - 32px);
    background-position: top left,top center,top right,center right, bottom right,bottom center,bottom left,center left;
    background-repeat: no-repeat;
    text-align: center
    padding 20px 6px 6px
    +above($breakpoints.sm)
      background-image: radial-gradient(circle at 100% 100%, transparent 19px, #405a86 19px, #405a86 21px, transparent 21px), linear-gradient(to right, #405a86, #557194), radial-gradient(circle at 0% 100%, transparent 19px, #557194 19px, #557194 21px, transparent 21px), linear-gradient(to bottom, #557194, #425a80), radial-gradient(circle at 0% 0%, transparent 19px, #425a80 19px, #425a80 21px, transparent 21px), linear-gradient(to left, #425a80, #2a4276), radial-gradient(circle at 100% 0%, transparent 19px, #2a4276 19px, #2a4276 21px, transparent 21px), linear-gradient(to top, #2a4276, #405a86);
      background-size: 21px 21px, calc(100% - 42px) 2px, 21px 21px, 2px calc(100% - 42px);
      text-align: start
      padding 30px 0 20px 20px
    +above($breakpoints.md)
      background-image: radial-gradient(circle at 100% 100%, transparent 24px, #405a86 24px, #405a86 26px, transparent 26px), linear-gradient(to right, #405a86, #557194), radial-gradient(circle at 0% 100%, transparent 24px, #557194 24px, #557194 26px, transparent 26px), linear-gradient(to bottom, #557194, #425a80), radial-gradient(circle at 0% 0%, transparent 24px, #425a80 24px, #425a80 26px, transparent 26px), linear-gradient(to left, #425a80, #2a4276), radial-gradient(circle at 100% 0%, transparent 24px, #2a4276 24px, #2a4276 26px, transparent 26px), linear-gradient(to top, #2a4276, #405a86);
      background-size: 26px 26px, calc(100% - 52px) 2px, 26px 26px, 2px calc(100% - 52px);
      padding 50px 0 40px 40px
    +above($breakpoints.xxl)
      padding 64px 0 55px 55px
      background-image: radial-gradient(circle at 100% 100%, transparent 30px, #405a86 30px, #405a86 32px, transparent 32px), linear-gradient(to right, #405a86, #557194), radial-gradient(circle at 0% 100%, transparent 30px, #557194 30px, #557194 32px, transparent 32px), linear-gradient(to bottom, #557194, #425a80), radial-gradient(circle at 0% 0%, transparent 30px, #425a80 30px, #425a80 32px, transparent 32px), linear-gradient(to left, #425a80, #2a4276), radial-gradient(circle at 100% 0%, transparent 30px, #2a4276 30px, #2a4276 32px, transparent 32px), linear-gradient(to top, #2a4276, #405a86);
      background-size: 32px 32px, calc(100% - 64px) 2px, 32px 32px, 2px calc(100% - 64px);

  &__title
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #99B1EE
      border-radius: 7px
      width: 50px;
      height: 4px;
      left: 123px;
      top: -10px;
      +above($breakpoints.sm)
        width: 35px;
        height: 4px;
        left: 0;
        top: -12px;
      +above($breakpoints.md)
        width: 45px;
        height: 6px;
        top: -19px;
      +above($breakpoints.xxl)
        width 49px
        height: 7px
        top: -24px
    &:before
      content: ""
      position: absolute
      z-index -1
      width 66%
      height: 1px
      border-top: 1px dashed #5588C7
      bottom: -11px;
      left: 51px;
      +above($breakpoints.sm)
        width: 56%;
        bottom: -15px;
        left: 0;
      +above($breakpoints.md)
        width: 63%;
        bottom: -28px;
      +above($breakpoints.xxl)
        width 66%
        bottom: -40px

  &__block
    display: flex
    align-items: flex-start
    margin 20px 0 10px
    +above($breakpoints.sm)
      gap: 10px
      margin 30px 0 20px
    +above($breakpoints.md)
      gap: 15px
      margin 50px 0 25px
    +above($breakpoints.xxl)
      gap: 20px
      margin 80px 0 36px

  &__icon-wrapper
    flex-shrink: 0
    display: flex
    justify-content center
    align-items: center
    border-radius: 6px
    background-color #fff
    width 20px
    height: 20px
    +above($breakpoints.sm)
      width 25px
      height: 25px
      margin-top 4px
    +above($breakpoints.md)
      width 28px
      height: 28px
      margin-top 5px
    +above($breakpoints.xxl)
      width 30px
      height: 30px
      margin-top 6px

  &__icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 16px
      height: 16px
    +above($breakpoints.md)
      width 17px
      height: 17px
    +above($breakpoints.xxl)
      width 18px
      height: 18px

  &__bottom
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      gap: 15px
    +above($breakpoints.md)
      gap: 18px
    +above($breakpoints.xxl)
      gap: 20px

  &__form
    width 100%
    background: linear-gradient(155deg, rgba(255, 255, 255, 0.2) 2.11%, rgba(172, 199, 255, 0.2) 100%);
    display: flex
    flex-direction: column
    gap: 5px
    border-radius: 13px
    padding 15px 14px
    +above($breakpoints.sm)
      width 230px
      border-radius: 15px
      padding 25px 15px
    +above($breakpoints.md)
      width 300px
      border-radius: 20px
      padding 30px 20px
    +above($breakpoints.xxl)
      width 330px
      border-radius: 25px
      padding 35px 25px

  &__bottom-block
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: column
      align-items: flex-start
      gap: 10px
      margin-bottom 15px
    +above($breakpoints.md)
      gap: 15px
      margin-bottom 25px
    +above($breakpoints.xxl)
      gap: 20px
      margin-bottom 35px

  &__img
    width 50px
    height: auto
    +above($breakpoints.sm)
      width 90px
    +above($breakpoints.md)
      width 110px
    +above($breakpoints.xxl)
      width 128px
