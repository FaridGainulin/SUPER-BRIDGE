.finances-section
  background-color #1D2F50

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0
    +above($breakpoints.md)
      padding 60px 0
    +above($breakpoints.xxl)
      padding 90px 0

  &__box
    position relative
    z-index 1
    padding 15px 0
    +above($breakpoints.sm)
      padding 30px 0 40px
    +above($breakpoints.md)
      padding 40px 0 60px
    +above($breakpoints.xxl)
      padding 60px 0 80px
    &:after
      content: ""
      position: absolute
      z-index -1
      background: linear-gradient(270deg, rgba(69, 95, 173, 0.25) 0%, rgba(69, 95, 173, 0.75) 100%);
      width 117%
      height: 100%
      top: 0
      left: 50%
      transform: translateX(-50%)
      border-radius: 20px
      +above($breakpoints.sm)
        border-radius: 25px
      +above($breakpoints.md)
        border-radius: 30px
      +above($breakpoints.xxl)
        border-radius: 35px

  &__sub-title
    display: flex
    justify-content center
    align-items: center
    background-color #1B1B1B
    margin: 5px auto 15px
    border-radius: 8px
    width 100%
    height: 44px
    +above($breakpoints.sm)
      margin: 5px auto 25px
      border-radius: 12px
      width: 445px;
      height: 36px;
    +above($breakpoints.md)
      margin: 5px auto 35px
      border-radius: 16px
      width: 554px;
      height: 46px;
    +above($breakpoints.xxl)
      margin: 5px auto 45px
      border-radius: 18px
      width 701px
      height: 58px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      flex-wrap: wrap
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position relative
    color: #353535
    background-color #fff
    box-shadow: 0 5px 15px 0 rgba(25, 133, 56, 0.15);
    width 280px !important
    display: flex
    flex-direction: column
    border-radius: 18px
    gap: 10px
    padding 15px 5px
    +above($breakpoints.sm)
      width 235px !important
      gap: 15px
      padding 20px 5px 20px 20px
    +above($breakpoints.md)
      border-radius: 25px
      width: 308px !important;
      gap: 20px
      padding 25px 5px 25px 25px
    +above($breakpoints.xxl)
      width 380px !important
      gap: 22px
      padding 32px 5px 29px 34px

  &__icon-wrapper
    position: absolute
    background-color #1D2F50
    box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.1);
    border: 3px solid #fff
    border-radius: 50%
    display: flex
    justify-content center
    align-items: center
    width: 27px;
    height: 27px;
    outline: 7px solid #f5f5f5;
    top: 7px;
    right: 7px;
    +above($breakpoints.md)
      width: 30px;
      height: 30px;
      outline: 8px solid #f5f5f5;
      top: 8px;
      right: 8px;
    +above($breakpoints.xxl)
      width 33px
      height: 33px
      outline: 10px solid #F5F5F5
      top: 10px
      right: 10px

  &__icon
    width 10px
    height: 8px
    +above($breakpoints.md)
      width 14px
      height: 11px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      margin-top 30px
    +above($breakpoints.md)
      gap: 20px
      margin-top 60px
    +above($breakpoints.xxl)
      margin-top 90px

  &__bottom-block,
  &__form
    border-radius: 10px
    +above($breakpoints.sm)
      border-radius: 15px
    +above($breakpoints.md)
      border-radius: 20px
    +above($breakpoints.xxl)
      border-radius: 25px

  &__bottom-block
    position relative
    width 100%
    background-color #1D2F50
    display: flex
    flex-direction: column
    gap: 10px
    padding 15px 5px
    +above($breakpoints.sm)
      gap: 15px;
      width: 480px;
      padding: 51px 5px 60px 230px;
    +above($breakpoints.md)
      width: 636px;
      padding: 62px 5px 72px 300px;
    +above($breakpoints.xxl)
      width 780px
      padding 71px 5px 80px 376px

  &__bottom-img
    position: absolute
    width 80px
    height: auto
    bottom: 0
    left: 0
    +above($breakpoints.sm)
      width 200px
    +above($breakpoints.md)
      width 270px
    +above($breakpoints.xxl)
      width 337px

  &__form
    width 100%
    background: #fff
    display: flex
    flex-direction: column
    gap: 5px
    padding 15px 14px
    +above($breakpoints.sm)
      width 230px
      padding 25px 15px
    +above($breakpoints.md)
      width 300px
      padding 30px 20px
    +above($breakpoints.xxl)
      width 330px
      padding 35px 25px
